<div class="signin-panel panel panel-default">
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin'}) do |f| %>
      <h2 class="form-signin-heading">Welcome to TextLab</h2>
		  <div class="devise-notice"><%= notice %></div>
		  <div class="devise-alert"><%= alert %></div>
      <div class="field">
        <%= f.label :email, class: 'sr-only' %>
        <%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "E-mail" %>
      </div>

      <div class="field">
        <%= f.label :password, class: 'sr-only' %>
        <%= f.password_field :password, autocomplete: "off", required: true, class: "form-control", placeholder: "Password" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign in", class: 'btn btn-lg btn-primary btn-block' %>
        
        <div class="links">
          <%= render "devise/shared/links" %>        
        </div>
      </div>
    <% end %>
  </div>
</div>      
