<div class="signin-panel panel panel-default">
	<div class="panel-body">

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :post}) do |f| %>
			<h2 class="form-signin-heading">Forgot Password?</h2>
			<div class="devise-notice"><%= notice %></div>
			<div class="devise-alert"><%= alert %></div>
			<%= devise_error %>

			<div class="field">
				<%= f.label :email, class: 'sr-only' %>
				<%= f.email_field :email, autofocus: true, required: true, class: "form-control", placeholder: "E-mail" %>
			</div>

			<div class="actions">
				<%= f.submit "Send me reset password instructions", { class: "btn btn-lg btn-primary btn-block" } %>
				<div class="links">
					<%= render "devise/shared/links" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
